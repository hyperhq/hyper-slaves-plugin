        </dependency>
        <dependency>
            <groupId>org.jenkins-ci.plugins.workflow</groupId>
            <artifactId>workflow-support</artifactId>
            <version>1.13</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>sh.hyper.plugins</groupId>
            <artifactId>hyper-commons</artifactId>
            <version>0.1.3</version>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
