    <properties>
        <jenkins.version>2.7.2</jenkins.version>
        <java.level>8</java.level>
        <jenkins-test-harness.version>2.14</jenkins-test-harness.version>
    </properties>

    <scm>
        <connection>scm:git:git://github.com/jenkinsci/hyper-slaves-plugin.git</connection>
        <developerConnection>scm:git:git@github.com:jenkinsci/hyper-slaves-plugin.git</developerConnection>
        <url>https://github.com/jenkinsci/hyper-slaves-plugin</url>
    </scm>

    <dependencies>
        <dependency>
            <groupId>org.jenkins-ci.plugins.workflow</groupId>
            <artifactId>workflow-step-api</artifactId>
